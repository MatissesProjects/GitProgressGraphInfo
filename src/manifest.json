{
  "manifest_version": 3,
  "name": "GitHeat",
  "version": "1.0.0",
  "description": "Reveal hidden metrics behind GitHub contribution graphs.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
